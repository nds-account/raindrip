	</description>
	<files>
		<filename plugin="bot_mb">bot_mb.php</filename>
		<filename>index.html</filename>
		<folder>bot_mb</folder>
	</files>
	<languages>
		<language tag="en-GB">languages/en-GB/en-GB.plg_content_bot_mb.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="image_folder" type="folderlist" default="" hide_none="blank" label="Default image folder" directory="images" description="Default image folder where the images for multimedia box will be placed. Default is images." />
				<field name="over_opacity" type="text" default="0.7" label="Overlay opacity" description="0 is completely transparent" />
				<field name="mbox_theme" type="list" default="Dark" label="MediaboxAdvanced Template" description="MediaboxAdvanced comes with 4 templates" >
					<option value="Dark">Dark</option>
					<option value="Light">Light</option>
					<option value="Minimal">Minimal</option>
					<option value="Smooth">Smooth</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
